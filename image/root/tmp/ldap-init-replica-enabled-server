olcDatabase: {0}config
olcRootDN: cn=Manager,cn=config
olcRootPW: @PASSWORD@
olcMonitoring: FALSE
olcAccess: {0}to dn.subtree="cn=schema,cn=config"
  by users read
olcAccess: {1}to * by * none

dn: olcDatabase={1}monitor,cn=config
objectClass: olcDatabaseConfig
olcDatabase: {1}monitor
olcAddContentAcl: FALSE
olcLastMod: TRUE
olcMaxDerefDepth: 15
olcReadOnly: FALSE
olcSyncUseSubentry: FALSE
olcMonitoring: FALSE
olcAccess: {3}to dn.subtree="cn=monitor"
  by dn.exact="cn=Manager,cn=config" read
  by dn.exact="cn=Manager,@SUFFIX@" read
  by * none

dn: olcDatabase={2}mdb,cn=config
objectClass: olcDatabaseConfig
objectClass: olcMdbConfig
olcDatabase: {2}mdb
olcMonitoring: TRUE
olcSuffix: @SUFFIX@
olcRootDN: cn=Manager,@SUFFIX@
olcRootPW: @PASSWORD@
olcDbDirectory: /var/openldap-data/@SUFFIXDOMAIN@
olcDbMaxSize: 42949672960
olcDbIndex: objectClass pres,eq
olcDbIndex: cn pres,eq,sub
olcDbIndex: uid pres,eq
olcDbIndex: uidNumber pres,eq
olcDbIndex: gidNumber pres,eq
olcDbIndex: mail pres,eq,sub
olcDbIndex: ou pres,eq
olcDbIndex: loginShell pres,eq
olcDbIndex: sn pres,eq,sub
olcDbIndex: givenName pres,eq,sub
olcDbIndex: memberUid pres,eq
olcDbIndex: nisMapName pres,eq
olcDbIndex: nisMapEntry pres,eq
olcDbIndex: entryCSN eq
olcDbIndex: entryUUID eq
olcAccess: {0}to attrs=userPassword
  by dn.exact="cn=Manager,@SUFFIX@" write
  by dn.exact="cn=Replicator,@SUFFIX@" read
  by self =xw
  by anonymous auth
  by * none
olcAccess: {2}to * by * read
olcLimits: {0}dn.exact="cn=Manager,@SUFFIX@"
  size.soft=unlimited size.hard=unlimited
  time.soft=unlimited time.hard=unlimited
olcLimits: {1}dn.exact="cn=Replicator,@SUFFIX@"
  size.soft=unlimited size.hard=unlimited
  time.soft=unlimited time.hard=unlimited

dn: olcOverlay=ppolicy,olcDatabase={2}mdb,cn=config
objectClass: olcOverlayConfig
objectClass: olcPPolicyConfig
